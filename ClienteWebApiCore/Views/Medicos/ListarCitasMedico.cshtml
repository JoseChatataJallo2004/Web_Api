@model IEnumerable<ClienteWebApiCore.Models.PA_CITAS_MEDICO>

@{
    ViewData["Title"] = "ListarCitasMedico";
}

<h1>ListarCitasMedico</h1>


@using (Html.BeginForm())
{
    <div>
        Medico: @Html.DropDownList("codmed",(SelectList)ViewBag.medicos,"Seleccione",new {@class="form-select"})

        <button class="btn btn-outline-success">Consultar</button>  |
        <a asp-action="listaMedicos" class="btn btn-outline-danger">Listar Medicos</a>

    </div>
} 
<br />
<p>

    Cantidad de Citas : @ViewBag.cantidad

</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nrocita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.codpac)
            </th>
